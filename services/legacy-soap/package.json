{
  "name": "@ndp/legacy-adapter-v2",
  "version": "2.0.0",
  "description": "Enhanced Legacy SOAP Adapter with Kafka async processing for high scalability",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "lint": "eslint src/",
    "test": "jest",
    "docker:build": "docker build -t ndp/legacy-adapter:2.0 .",
    "docker:run": "docker run -p 3007:3007 ndp/legacy-adapter:2.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "xml2js": "^0.6.2",
    "bottleneck": "^2.19.5",
    "opossum": "^8.1.3",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "@elastic/elasticsearch": "^8.11.0",
    "prom-client": "^15.1.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/xml2js": "^0.4.14",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ndp",
    "legacy",
    "soap",
    "adapter",
    "kafka",
    "async",
    "healthcare",
    "egypt"
  ]
}
