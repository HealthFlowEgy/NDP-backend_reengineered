# ============================================================================
# NDP Backend Environment Configuration
# Copy to .env and customize for your environment
# ============================================================================

# General
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGINS=*

# API Gateway
GATEWAY_PORT=3000
RATE_LIMIT_PER_MINUTE=100

# Prescription Service
PRESCRIPTION_SERVICE_PORT=3001

# Dispense Service
DISPENSE_SERVICE_PORT=3002

# Medication Directory Service
MEDICATION_SERVICE_PORT=3003

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ndp
DB_USER=ndp
DB_PASSWORD=ndp_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ndp:

# Kafka (optional, for events)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ndp-backend
KAFKA_GROUP_ID=ndp-backend-group
KAFKA_SSL=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Sunbird RC (Healthcare Professional Registry)
SUNBIRD_RC_URL=http://localhost:8081
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=ndp
KEYCLOAK_CLIENT_ID=ndp-backend
KEYCLOAK_CLIENT_SECRET=

# AI Validation Engine
AI_VALIDATION_ENABLED=true
AI_VALIDATION_URL=http://67.207.74.0
AI_VALIDATION_TIMEOUT=5000
AI_VALIDATION_SKIP_ON_ERROR=true
